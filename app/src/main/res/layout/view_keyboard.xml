            android:gravity="center"
            app:keyboard_button_text="@string/button9_large_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.arrg.app.uvault.views.uviews.PinLockButtonView
            android:id="@+id/pin_code_button_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            app:keyboard_button_image="@drawable/ic_arrow_back" />

        <com.arrg.app.uvault.views.uviews.PinLockButtonView
            android:id="@+id/pin_code_button_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            app:keyboard_button_text="@string/button11_large_text" />

        <com.arrg.app.uvault.views.uviews.PinLockButtonView
            android:id="@+id/pin_code_button_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
